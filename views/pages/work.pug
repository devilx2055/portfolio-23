extends ../base.pug

block variables
    - var template = 'work'

block content
    .work
        .work__wrapper
            .work__nav
                    .work__nav--text
                        p.work__nav--text--para(data-animation="lable")
                            | Currentyly doing
                            | Freelancing

                    .work__nav--text
                        p.work__nav--text--para(data-animation="lable")
                            | Based in ahemdabad
                            | India

            section.work__intro
                .work__intro__wrapper
                    .work__intro__wrapper--header
                        p.work__intro__wrapper--num(data-animation="lable") 01/

                        .work__intro__wrapper--para
                            p.work__intro__wrapper--para--text
                                | Projects
                                span.span__num 02

                            p.work__intro__wrapper--para--text
                                | Labs
                                span.span__num 03

                            .work__intro__wrapper--para--info
                                p.work__intro__Wrapper--para--info--text(data-animation="lable") Projects

                                p.work__intro__Wrapper--para--info--para(data-animation="lable")
